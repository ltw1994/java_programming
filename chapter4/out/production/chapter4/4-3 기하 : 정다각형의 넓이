import java.util.Scanner;

public class Main {
public static void main(String[] args) {
        double n, s, area ;

        Scanner scan = new Scanner(System.in);
        n = scan.nextDouble();
        s = scan.nextDouble();

        area = (n * s * s) / (4 * Math.tan(Math.toRadians(180 / n))) ;

        area = (int)(area*100) / 100.0 ;
        System.out.printf("%.2f",area);

        }
}